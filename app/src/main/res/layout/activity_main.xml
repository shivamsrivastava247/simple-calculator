<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:gravity="right"
        android:hint="0"
        android:textSize="30dp" />

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="2dp">

        <Button
            android:id="@+id/c"
            android:layout_width="102dp"
            android:layout_height="92dp"
            android:text="C"
            android:textSize="40dp"
            android:clickable="true"
            android:onClick="c"/>

        <Button
            android:id="@+id/backspace"
            android:layout_width="102dp"
            android:layout_height="92dp"
            android:background="@drawable/backarrow"
            android:layout_toRightOf="@+id/c"
            android:textSize="40dp"
            android:clickable="true"
            android:onClick="backSpace"/>
        <Button
            android:id="@+id/addition"
            android:layout_width="102dp"
            android:layout_height="92dp"
            android:text="+"
            android:layout_toRightOf="@+id/backspace"
            android:textSize="40dp"
            android:clickable="true"
            android:onClick="addition"/>
        <Button
            android:id="@+id/subtraction"
            android:layout_width="102dp"
            android:layout_height="92dp"
            android:text="-"
            android:layout_toRightOf="@+id/addition"
            android:textSize="40dp"
            android:clickable="true"
            android:onClick="subtraction"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="2dp">

        <Button
            android:id="@+id/seven"
            android:layout_width="102dp"
            android:layout_height="92dp"
            android:text="7"
            android:textSize="40dp"
            android:clickable="true"
            android:onClick="seven"
            />
        <Button
            android:id="@+id/eight"
            android:layout_width="102dp"
            android:layout_height="92dp"
            android:text="8"
            android:layout_toRightOf="@+id/seven"
            android:textSize="40dp"
            android:clickable="true"
            android:onClick="eight"/>
        <Button
            android:id="@+id/nine"
            android:layout_width="102dp"
            android:layout_height="92dp"
            android:text="9"
            android:layout_toRightOf="@+id/eight"
            android:textSize="40dp"
            android:clickable="true"
            android:onClick="nine"/>
        <Button
            android:id="@+id/divide"
            android:layout_width="102dp"
            android:layout_height="92dp"
            android:text="/"
            android:layout_toRightOf="@+id/nine"
            android:textSize="40dp"
            android:clickable="true"
            android:onClick="division"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_margin="2dp">

        <Button
            android:id="@+id/four"
            android:layout_width="102dp"
            android:layout_height="92dp"
            android:text="4"
            android:textSize="40dp"
            android:clickable="true"
            android:onClick="four"/>
        <Button
            android:id="@+id/five"
            android:layout_width="102dp"
            android:layout_height="92dp"
            android:text="5"
            android:layout_toRightOf="@+id/four"
            android:textSize="40dp"
            android:clickable="true"
            android:onClick="five"/>
        <Button
            android:id="@+id/six"
            android:layout_width="102dp"
            android:layout_height="92dp"
            android:text="6"
            android:layout_toRightOf="@+id/five"
            android:textSize="40sp"
            android:clickable="true"
            android:onClick="six"/>
        <Button
            android:id="@+id/multiplication"
            android:layout_width="102dp"
            android:layout_height="92dp"
            android:text="X"
            android:layout_toRightOf="@+id/six"
            android:textSize="40dp"
            android:clickable="true"
            android:onClick="multiplication"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_height="184dp"
        android:layout_width="match_parent"
        android:layout_margin="2dp">


        <Button
            android:id="@+id/AC"
            android:layout_width="102dp"
            android:layout_height="92dp"
            android:text="AC"

            android:layout_alignParentBottom="true"
            android:textSize="40dp"/>
        <Button
            android:id="@+id/zero"
            android:layout_width="102dp"
            android:layout_height="92dp"

            android:text="0"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/AC"
            android:textSize="40dp"
            android:clickable="true"
            android:onClick="zero"/>

        <Button
            android:id="@+id/point"
            android:layout_width="102dp"

            android:layout_height="92dp"
            android:text="."
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/zero"
            android:textSize="40dp" />

        <Button
            android:id="@+id/one"
            android:layout_width="102dp"
            android:layout_height="92dp"
            android:text="1"
            android:layout_above="@+id/AC"
            android:textSize="40dp"
            android:clickable="true"
            android:onClick="one"/>
        <Button
            android:id="@+id/two"
            android:layout_width="102dp"
            android:layout_height="92dp"
            android:text="2"
            android:layout_toRightOf="@+id/one"
            android:textSize="40dp"
            android:clickable="true"
            android:onClick="two"/>
        <Button
            android:id="@+id/three"
            android:layout_width="102dp"
            android:layout_height="92dp"
            android:text="3"
            android:layout_toRightOf="@+id/two"
            android:textSize="40dp"
            android:clickable="true"
            android:onClick="three"/>

        <Button
            android:id="@+id/equal"
            android:layout_width="102dp"
            android:layout_height="184dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/three"
            android:text="="
            android:textSize="40dp"
            android:clickable="true"
            android:onClick="equal"/>

    </RelativeLayout>
</LinearLayout>